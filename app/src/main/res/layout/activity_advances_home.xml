<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdvancesHomeActivity"
    android:orientation="vertical"
    android:background="@drawable/back420">
    <LinearLayout
        android:id="@+id/toolbarll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="12dp">


        <LinearLayout
            android:id="@+id/ll_cash_in_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_cih_heading"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_black_background"
                android:textColor="@color/black"
                android:text="@string/cash_in_hand"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/txt_cash_in_hand"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_select_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:weightSum="1">
            <Spinner
                android:id="@+id/spinner_selectSite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:dropDownSelector="@drawable/ic_drop_down_selector"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_advances_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_dayBookList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="1dp"
                android:layout_marginTop="10dp"
                android:weightSum="3.3">



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dayBook_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/day_book_list"
                    android:letterSpacing="0.12"
                    android:visibility="visible"
                    android:background="@drawable/color_second_sec"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dayBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="1dp"
                android:layout_marginTop="10dp"
                android:weightSum="3.3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_receive_cash"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/color_secand"
                    android:gravity="center"
                    android:text="@string/receiving"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_heading_pay"
                    android:layout_width="10dp"
                    android:layout_weight="1.15"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/cash"
                    android:letterSpacing="0.12"
                    android:background="@drawable/color_second_sec"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_expense"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1.15"
                    android:background="@drawable/color_shaed_ok"
                    android:gravity="center"
                    android:text="@string/expenses"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_payment_do"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="1dp"
                android:layout_marginTop="10dp"
                android:weightSum="3.3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_skilled_payment"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/color_secand"
                    android:gravity="center"
                    android:text="@string/skilled"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="10dp"
                    android:layout_weight="1.15"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/payment"
                    android:letterSpacing="0.12"
                    android:background="@drawable/color_second_sec"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_unskilled_payment"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1.15"
                    android:background="@drawable/color_shaed_ok"
                    android:gravity="center"
                    android:text="@string/unskilled"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:padding="1dp"

                android:weightSum="3.3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_advancesReprt"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/color_secand"
                    android:gravity="center"
                    android:letterSpacing="0.15"
                    android:text="@string/view"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="10dp"
                    android:layout_weight="1.15"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/advances_report"
                    android:letterSpacing="0"
                    android:background="@drawable/color_second_sec"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/downloadAdvances"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1.15"
                    android:background="@drawable/color_shaed_ok"
                    android:gravity="center"
                    android:text="@string/download"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fundrequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_success"
            android:letterSpacing="0.12"
            android:text="@string/cash_request"
            android:textColor="@color/black"

            android:textSize="16sp"
            android:textStyle="bold" />






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:background="@color/bottom_layout"
        android:layout_above="@+id/bottom_toolbar"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disclaimer"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hajiri_register_do_not_take_any_responsbility_of_the_text_result_while_using_speech_to_text_facility_check_the_sentence_word_at_yopur_end_while_using_speech_to_text"
            android:layout_gravity="center"
            android:gravity="center" android:background="@color/gray_more_light"
            android:textColor="@color/black"
            />



    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bottom_layout"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/homeicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/home2"
                    android:backgroundTint="#0091EA" />

                <TextView
                    android:id="@+id/hometxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/home"
                    android:textColor="#5C5C5C" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_manpower"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bookingicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_manpower"
                    android:backgroundTint="#0091EA" />

                <TextView
                    android:id="@+id/bookingtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/manpower"
                    android:textColor="#5C5C5C" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_work_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:visibility="gone"

                android:gravity="center"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/work_activity_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_work"
                    android:backgroundTint="#0091EA" />

                <TextView
                    android:id="@+id/work_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/master_data"
                    android:textColor="#5C5C5C" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/payouticon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_rupee"
                    android:backgroundTint="#0091EA" />

                <TextView
                    android:id="@+id/payouttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/day_book"
                    android:textColor="#5C5C5C" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>