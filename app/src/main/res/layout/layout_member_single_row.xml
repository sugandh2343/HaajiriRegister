<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:weightSum="7">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="14sp"
            android:gravity="center"
            />




        <TextView
            android:id="@+id/txt_force_logout_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/forcelogout"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_force_logout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checked_true"
            android:visibility="gone"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_pic_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/work_activity"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_pic_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_checked_false"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_attendance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/attendance"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_attendance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checked_true"
            android:visibility="gone"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_cash"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/expense"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_cash"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checked_true"
            android:visibility="gone"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_expense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cash_heading"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_expense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checked_true"
            android:visibility="gone"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_block_unblock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:textColor="@color/white"
            android:text="@string/block"
            android:background="@color/red"
            android:textSize="12sp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:visibility="visible"
            android:gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"/>

</LinearLayout>