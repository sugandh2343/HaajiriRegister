<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#0f0f0f"
            android:textColor="@color/white"
            android:elegantTextHeight="true"
            android:elevation="16dp"
            android:text="@string/select_industry" />
        <Spinner
            android:id="@+id/spinner_select_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_designation"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_select_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
        <EditText
            android:id="@+id/et_custom_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_designation"
            android:visibility="visible"
            android:background="@drawable/shape_edit_background"
            android:elegantTextHeight="true"
            android:paddingStart="16dp"
            android:textColorHint="@color/white"
            android:inputType="textCapSentences"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:orientation="vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/star"
            android:layout_marginEnd="30dp"
            android:layout_gravity="right"
            />

        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/botton_half"
            android:hint="@string/company_name"

            android:inputType="textCapSentences"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/star"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            />
        <EditText
            android:id="@+id/et_address_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:layout_marginStart="32dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:hint="@string/address"
            android:paddingStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:inputType="textCapSentences" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:visibility="gone"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            />
        <EditText
            android:id="@+id/et_email_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            android:paddingStart="16dp"
            android:padding="8dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_website_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:textColorHint="@color/white"
            android:layout_marginStart="32dp"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:hint="@string/website_optional"
            android:paddingStart="16dp"
            android:padding="8dp"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_admini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/required"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:gravity="start"
                android:layout_marginTop="10dp"/>


        </LinearLayout>




        <Spinner
            android:id="@+id/spinner_designation"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            android:dropDownSelector="@drawable/ic_drop_down_selector"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_success"
            android:layout_marginTop="8dp"/>
    </LinearLayout>



</LinearLayout>