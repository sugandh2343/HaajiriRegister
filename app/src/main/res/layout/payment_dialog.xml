<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_razor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_razor"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_below="@+id/img_razor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_confirmation"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@color/red"/>
            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_file_one_click_away"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray_more_light"
                android:text="@string/download_details"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray_light"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/download_file_type"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_file_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Attendance Report"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/txt_heading_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_date_range"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_light"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/from"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="01-Dec-2022"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/to"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="15-Dec-2022"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_details"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray_light"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/payable_amt"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rupee_symbol"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mode"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_mode_of_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Razorpay"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold"/>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_disclaimer"
                    android:background="@drawable/button_success"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@color/gray_more_light"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/apply_promo_code"
                        android:textColor="@color/black"/>
                    <Spinner
                        android:id="@+id/spinner_promo"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:padding="8dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="32dp"
                    android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red"
                        android:text="@string/places_cancel"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pay"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/darkGreen"
                        android:text="@string/payment"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</ScrollView>
