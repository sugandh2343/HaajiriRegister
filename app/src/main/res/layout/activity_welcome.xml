<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back420"
    tools:context=".Activity.WelcomeActivity">
    <LinearLayout
        android:id="@+id/toolbarll"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="end"
        android:gravity="end"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView

        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="136dp"

        android:fontFamily="@font/doppio_one"
        android:text="Team"
        android:textColor="@color/white"
        android:textSize="20sp" />
        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"

            android:fontFamily="@font/doppio_one"
            android:text="Skill Zoomers"
            android:layout_marginStart="8dp"
            android:textColor="@color/red"
            android:textSize="20sp" />
        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/doppio_one"
            android:text="welcomes you...."
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The skill zoomers are dedicated to work "
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/smart"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_letsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/button_success"
        android:layout_marginTop="24dp"
        android:text="@string/let_s_begin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="8dp"/>




</LinearLayout>