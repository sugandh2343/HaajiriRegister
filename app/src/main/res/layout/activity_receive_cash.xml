<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back420"
    tools:context=".Activity.ReceiveCashActivity">
    <LinearLayout
        android:id="@+id/toolbarll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/received_fund"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/et_received_fund"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:textColor="@color/black"
                android:textColorHint="@color/black"

                android:hint="@string/enter_amount_here"
                android:padding="8dp"
                android:inputType="numberSigned"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/received_from"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/et_received_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/shape_edit_background"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/enter_name_here"
                android:padding="16dp"
                android:inputType="text"/>



        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_receiving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_success"
            android:text="@string/submit_receiving"
            android:letterSpacing="0.3"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_home"
            android:textColor="@color/blue_Accent"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textSize="16sp"/>



    </LinearLayout>

</LinearLayout>