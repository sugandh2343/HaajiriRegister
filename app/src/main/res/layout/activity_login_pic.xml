<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back420"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoginPic">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_a_selfie"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="160dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/my_profile" />


    <Button
        android:id="@+id/btn_selfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/take_a_selfie" />



    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/upload_selefie" />
    <LinearLayout
        android:id="@+id/ll_forceLogout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_force_logout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/you_have_5_min_and_30_sec_to_upload_your_selfie_else_you_will_be_forced_logout"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/txt_forcedLogout_msg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5 minutes 30sec"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_trial_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:visibility="visible"
            android:layout_marginEnd="16dp"
            android:weightSum="2"
            android:padding="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_trial_force_logout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:elegantTextHeight="true"

                android:text="@string/your_trial"
                android:textColor="@color/red"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fl_know_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:layout_height="wrap_content"
                android:background="@drawable/button_success"
                android:text="@string/know_more"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>