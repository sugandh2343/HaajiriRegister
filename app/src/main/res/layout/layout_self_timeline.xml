<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:weightSum="6.05"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/shape_recycler_view_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_site_name"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:elevation="32dp"
            android:outlineSpotShadowColor="@color/gray_more_light"
            android:shadowColor="@color/gray_more_light"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/worksite"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/txt_siteId"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/siteID"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@color/black"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:weightSum="4.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_manPower"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="10sp"
                android:text="ManPower"
                android:textColor="@color/black" />
            <View
                android:id="@+id/View_manpower"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:visibility="gone"
                android:background="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_skUsk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:weightSum="2.1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sk"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Usk"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>
            <View
                android:id="@+id/view_skilled"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="0.1"

                android:background="@color/black"/>
            <LinearLayout
                android:id="@+id/ll_manPower_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2.1">

                <TextView
                    android:id="@+id/txt_skilled"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="44"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/txt_unskilled"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"


                android:background="@color/black"/>
            <LinearLayout
                android:id="@+id/ll_manPower_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2.1">

                <TextView
                    android:id="@+id/txt_skilled_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
                <View
                    android:layout_width="0.3dp"

                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/txt_unskilled_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@color/black"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:weightSum="2.01"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2.01"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_payment_amount"
                    android:layout_width="0dp"
                    android:layout_weight="2.01"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

            </LinearLayout>







        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:weightSum="3.02"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_upTo_date_payment"
                android:layout_width="match_parent"
                android:layout_weight="3.02"
                android:layout_height="0dp"
                android:text=""
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/black"
                android:layout_gravity="center"/>



        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@color/black"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/blue"/>






</LinearLayout>
