<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back420"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/toolbar_layout"/>

    <TextView
        android:id="@+id/txt_msg_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/register_your_self"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible" />
    <LinearLayout
        android:id="@+id/ll_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/do_you_wish_to_use_another_language"
            android:background="@color/gray_more_light"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/cb_change_labguage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/yes"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_mobileNumber"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/botton_half"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="@color/white"
        android:layout_marginTop="8dp"
        android:hint="@string/enter_full_name"
        android:paddingStart="16dp"
        android:padding="8dp"
        android:inputType="textCapSentences"/>
    <EditText
        android:id="@+id/et_mobile_number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/botton_half"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:hint="@string/enter_mobile_number"
        android:paddingStart="16dp"
        android:padding="8dp"
        android:inputType="number"
        android:maxLength="13"/>
        <CheckBox
            android:id="@+id/cb_termsNcond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text=""/>
        <TextView
            android:id="@+id/btn_show_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_terms"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:background="@color/sky_blue"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="-5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/send_otp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/button_success"
        android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_a_user"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_verify_otp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.chaos.view.PinView
        android:id="@+id/MobileOtp_Pinview"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:cursorVisible="true"
        android:hint=""
        android:inputType="number"
        android:itemBackground="@color/white"
        android:layout_gravity="center"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="@color/white"
        app:cursorWidth="1dp"
        app:hideLineWhenFilled="false"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="8dp"
        app:itemSpacing="4dp"
        app:itemWidth="40dp"
        app:lineColor="#8A8A8A"
        app:lineWidth="1.2dp"
        app:viewType="rectangle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="@string/verify_otp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/button_success"
        android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/ll_force_logout_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Resend OTP in "
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txt_forcedLogout_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="30 sec"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:background="@color/sky_blue"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#0f0f0f"
                android:textColor="@color/white"
                android:elegantTextHeight="true"
                android:elevation="16dp"
                android:text="@string/select_industry" />
            <Spinner
                android:id="@+id/spinner_select_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
            <EditText
                android:id="@+id/et_custom_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Category Name"
                android:visibility="gone"
                android:textColorHint="@color/black"
                android:inputType="textCapSentences"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_avail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To select this industry please contact hajiriskillszoomers@gmail.com "
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/next"
                android:background="@drawable/button_success"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_designation"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_select_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
            <EditText
                android:id="@+id/et_custom_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_designation"
                android:visibility="visible"
                android:background="@drawable/shape_edit_background"
                android:elegantTextHeight="true"
                android:paddingStart="16dp"
                android:textColorHint="@color/white"
                android:inputType="textCapSentences"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/botton_half"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:hint="@string/enter_user_id"
        android:paddingStart="16dp"
        android:padding="8dp"
        android:inputType="text" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        android:layout_marginTop="8dp"
        app:endIconMode="password_toggle"
        android:background="@drawable/botton_half">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_half"
            android:hint="@string/create_a_password"
            android:inputType="textPassword"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        app:endIconMode="password_toggle"
        android:background="@drawable/botton_half"
       >
        <EditText
            android:id="@+id/et_confirm_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:hint="@string/re_enter_the_password"
            android:background="@drawable/botton_half"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/button_success"
        android:layout_marginTop="8dp"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/star"
            android:layout_marginEnd="30dp"
            android:layout_gravity="right"
            />

        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/botton_half"
            android:hint="@string/company_name"
            android:inputType="textCapSentences"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/star"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            />
        <EditText
            android:id="@+id/et_address_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:layout_marginStart="32dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:hint="@string/address"
            android:paddingStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:inputType="textCapSentences" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:visibility="gone"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            />
        <EditText
            android:id="@+id/et_email_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            android:paddingStart="16dp"
            android:padding="8dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_website_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/botton_half"
            android:textColorHint="@color/white"
            android:layout_marginStart="32dp"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:hint="@string/website_optional"
            android:paddingStart="16dp"
            android:padding="8dp"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
               android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_admini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/required"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:visibility="visible"
                android:layout_marginStart="16dp"
                android:gravity="start"
                android:layout_marginTop="10dp"/>


        </LinearLayout>




        <Spinner
            android:id="@+id/spinner_designation"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            android:dropDownSelector="@drawable/ic_drop_down_selector"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_success"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>